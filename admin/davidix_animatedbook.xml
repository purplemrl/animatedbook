<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.4" method="upgrade">
	<name>com_davidix_animatedbook</name>
	<creationDate>2015 october 25</creationDate>
	<author></author>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<copyright></copyright>
	<license></license>
	<version>1.5.0</version>
	<description>"Joomla! Animated Book By Davidix (Davood Bereihi)
d.bereihi@gmail.com
+98-9335796656"</description>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates</schemapath>
		</schemas>
	</update>
	
	<files folder="site">
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>davidix_animatedbook.php</filename>
		<filename>router.php</filename>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	
	<languages folder="site">
		<language tag="en-GB">language/en-GB.com_davidix_animatedbook.ini</language>
		<language tag="fa-IR">language/fa-IR.com_davidix_animatedbook.ini</language>
	</languages>
	
	<administration>
		<menu link="index.php?option=com_davidix_animatedbook">Davidix_animatedbook</menu>
		<submenu>
			<menu link="option=com_davidix_animatedbook&amp;view=books">Books</menu>
			<menu link="option=com_categories&amp;view=categories&amp;extension=com_davidix_animatedbook">JCATEGORIES</menu>
		</submenu>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>davidix_animatedbook.php</filename>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>sql</folder>
			<folder>views</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB.com_davidix_animatedbook.ini</language>
			<language tag="en-GB">language/en-GB.com_davidix_animatedbook.sys.ini</language>
			<language tag="fa-IR">language/fa-IR.com_davidix_animatedbook.ini</language>
			<language tag="fa-IR">language/fa-IR.com_davidix_animatedbook.sys.ini</language>
		</languages>
	</administration>
	
	<updateservers>
	</updateservers>
</extension>
